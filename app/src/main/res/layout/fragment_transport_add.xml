<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_color">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="5dp"
        android:background="@drawable/fragment_bg"
        android:paddingHorizontal="15dp">

        <TextView
            android:id="@+id/title"
            style="@style/TextAppearance.AppCompat.Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_add_primary_dark"
            android:drawablePadding="5dp"
            android:fontFamily="casual"
            android:paddingTop="15dp"
            android:text="Add transport"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="20dp"
            android:textStyle="bold" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/title"
            android:layout_marginBottom="?android:attr/actionBarSize">

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal">

                <TableRow>

                    <EditText
                        android:id="@+id/add_package_name"
                        android:layout_marginVertical="5dp"
                        android:layout_weight="1"
                        android:background="@drawable/control_shape"
                        android:drawableLeft="@drawable/ic_package_primary"
                        android:drawablePadding="5dp"
                        android:hint="Package name"
                        android:inputType="textPersonName"
                        android:paddingHorizontal="10dp"
                        android:paddingVertical="10dp"></EditText>
                </TableRow>

                <TableRow>

                    <EditText
                        android:id="@+id/add_package_type"
                        android:layout_marginVertical="5dp"
                        android:layout_weight="1"
                        android:background="@drawable/control_shape"
                        android:drawableLeft="@drawable/ic_type_primary"
                        android:drawablePadding="5dp"
                        android:hint="Package type"
                        android:inputType="text"
                        android:paddingHorizontal="10dp"
                        android:paddingVertical="10dp"></EditText>
                </TableRow>

                <TableRow>

                    <EditText
                        android:id="@+id/add_package_cost"
                        android:layout_marginVertical="5dp"
                        android:layout_weight="1"
                        android:background="@drawable/control_shape"
                        android:digits="1,2,3,4,5,6,7,8,9,0"
                        android:drawableLeft="@drawable/ic_mony_primary"
                        android:drawablePadding="5dp"
                        android:hint="Cost"
                        android:inputType="number"
                        android:paddingHorizontal="10dp"
                        android:paddingVertical="10dp"></EditText>
                </TableRow>

                <TableRow
                    android:layout_marginVertical="5dp"
                    android:background="@drawable/control_shape"
                    android:paddingHorizontal="10dp"
                    android:paddingVertical="10dp">

                    <TextView
                        android:layout_marginRight="191dp"
                        android:drawableLeft="@drawable/ic_flag_primary"
                        android:drawablePadding="5dp"
                        android:textSize="18sp"></TextView>

                    <Spinner
                        android:id="@+id/country"
                        android:layout_marginLeft="-200dp"
                        android:layout_weight="1"
                        android:entries="@array/country"></Spinner>
                </TableRow>

                <TableRow
                    android:layout_marginVertical="5dp"
                    android:background="@drawable/control_shape"
                    android:paddingHorizontal="10dp"
                    android:paddingVertical="10dp">

                    <TextView
                        android:layout_marginRight="191dp"
                        android:drawableLeft="@drawable/ic_star_border_primary_24dp"
                        android:drawablePadding="5dp"
                        android:textSize="18sp"></TextView>

                    <Spinner
                        android:id="@+id/state"
                        android:layout_marginLeft="-200dp"
                        android:layout_weight="1"
                        android:entries="@array/state"></Spinner>
                </TableRow>

                <TableRow
                    android:layout_marginVertical="5dp"
                    android:background="@drawable/control_shape"
                    android:paddingHorizontal="10dp"
                    android:paddingVertical="10dp">

                    <TextView
                        android:layout_marginRight="191dp"
                        android:drawableLeft="@drawable/ic_location_city_primary_24dp"
                        android:drawablePadding="5dp"
                        android:textSize="18sp"></TextView>

                    <Spinner
                        android:id="@+id/city"
                        android:layout_marginLeft="-200dp"
                        android:layout_weight="1"
                        android:entries="@array/city"></Spinner>
                </TableRow>

                <TableRow
                    android:layout_marginVertical="5dp"
                    android:background="@drawable/control_shape"
                    android:paddingHorizontal="10dp"
                    android:paddingVertical="10dp">

                    <TextView
                        android:layout_marginRight="191dp"
                        android:drawableLeft="@drawable/ic_place_primary"
                        android:drawablePadding="5dp"
                        android:textSize="18sp"></TextView>

                    <Spinner
                        android:id="@+id/place"
                        android:layout_marginLeft="-200dp"
                        android:layout_weight="1"
                        android:entries="@array/place"></Spinner>
                </TableRow>

                <TableRow>

                    <EditText
                        android:id="@+id/add_package_description"
                        android:layout_marginVertical="5dp"
                        android:layout_weight="1"
                        android:background="@drawable/control_shape"
                        android:drawableLeft="@drawable/ic_description_primary"
                        android:drawablePadding="5dp"
                        android:hint="Description"
                        android:inputType="text"
                        android:paddingHorizontal="10dp"
                        android:paddingVertical="10dp"></EditText>
                </TableRow>

                <TableRow>

                    <EditText
                        android:id="@+id/add_package_persons"
                        android:layout_marginVertical="5dp"
                        android:layout_weight="1"
                        android:background="@drawable/control_shape"
                        android:digits="1,2,3,4,5,6,7,8,9,0"
                        android:drawableLeft="@drawable/ic_number_of_person_primary"
                        android:drawablePadding="5dp"
                        android:hint="Number of persons"
                        android:inputType="number"
                        android:maxLength="3"
                        android:paddingHorizontal="10dp"
                        android:paddingVertical="10dp"></EditText>
                </TableRow>

                <TableRow>

                    <EditText
                        android:id="@+id/add_package_days"
                        android:layout_marginVertical="5dp"
                        android:layout_weight="1"
                        android:background="@drawable/control_shape"
                        android:contentDescription="Numbers Only"
                        android:digits="1,2,3,4,5,6,7,8,9,0"
                        android:drawableLeft="@drawable/ic_days_primary"
                        android:drawablePadding="5dp"
                        android:hint="Number of days"
                        android:inputType="number"
                        android:maxLength="3"
                        android:paddingHorizontal="10dp"
                        android:paddingVertical="10dp"></EditText>
                </TableRow>

                <TableRow>

                    <EditText
                        android:id="@+id/add_package_nights"
                        android:layout_marginVertical="5dp"
                        android:layout_weight="1"
                        android:background="@drawable/control_shape"
                        android:contentDescription="Numbers Only"
                        android:digits="1,2,3,4,5,6,7,8,9,0"
                        android:drawableLeft="@drawable/ic_nights_primary"
                        android:drawablePadding="5dp"
                        android:hint="Number of nights"
                        android:inputType="number"
                        android:maxLength="3"
                        android:paddingHorizontal="10dp"
                        android:paddingVertical="10dp"></EditText>
                </TableRow>

                <TableRow>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:layout_weight="1">

                        <Button
                            android:id="@+id/add_package_save"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:backgroundTint="@color/colorPrimary"
                            android:paddingVertical="20dp"
                            android:text="Add"
                            android:textColor="@android:color/white"></Button>

                        <Button
                            android:id="@+id/add_package_cancel"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:backgroundTint="@android:color/darker_gray"
                            android:paddingVertical="20dp"
                            android:text="Cancel"
                            android:textColor="@android:color/white"></Button>
                    </LinearLayout>
                </TableRow>
            </TableLayout>
        </ScrollView>
    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>